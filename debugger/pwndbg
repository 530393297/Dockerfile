FROM ubuntu

MAINTAINER Chu <root@sh3ll.me>

RUN apt-get update && apt-get install -y locales && rm -rf /var/lib/apt/lists/* \
	&& localedef -i en_US -c -f UTF-8 -A /usr/share/locale/locale.alias en_US.UTF-8
ENV LANG en_US.utf8

RUN apt-get install -y git gdb build-essential \
	&& cd && git clone https://github.com/pwndbg/pwndbg \
	&& cd pwndbg && sed 's/sudo //g' setup.sh > tmp && mv tmp setup.sh \
	&& chmod +x setup.sh && ./setup.sh \
	&& apt-get clean && apt-get autoclean && apt-get -y --purge autoremove \
	&& rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
