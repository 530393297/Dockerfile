FROM ubuntu

MAINTAINER Chu <root@sh3ll.me>

RUN apt update \
	&& apt install git gdb gdb-multiarch vim qemu -y \
	&& ln -s `which gdb-multiarch` /usr/local/bin/gdb \
	&& echo -e "\n#gdb\nalias gdb='gdb -q'" >> .bashrc \
	&& apt-get clean && apt-get autoclean && apt-get -y --purge autoremove \
	&& rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
